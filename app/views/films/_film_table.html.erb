<table class="table table-striped table-bordered table-condensed table-hover">
    <thead>
      <th>Title</th>
      <th>Genre</th>
      <th>Rating</th>
      <th>Available?</th>
    </thead>

    <tbody>
    <%films.each do |f|%>
      <tr>
        <td><%= link_to f.title, film_path(f.id)%></td>
        <td><%= f.genre%></td>
        <td><%= f.rating%></td>
        <td><%= f.available? ? 'Yes': 'No'%></td>
      </tr>
    <%end%>
    </tbody>
  </table>
