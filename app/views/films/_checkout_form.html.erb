<div class='row'>
  <div class='col-xs-12'>
    <%= simple_form_for film_checkout, url: create_film_checkout_film_path do |f| %>
      <div class='form-group'>
        <%= f.label :user_id, 'Select Renter'%>
      </div>
      <div class='form-group'>
        <%= f.input :user_id, label: false, include_blank: false, collection: User.all.collect{|u| [u.full_name, u.id]}%>
      </div>
      <div class='form-group'>
        <%= f.submit "Checkout Film", class: "btn btn-primary btn-sm"%>
      </div>
    <%end%>
  </div>
</div>
